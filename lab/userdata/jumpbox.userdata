#cloud-config
users:
  - name: training
    lock_passwd: true
    gecos: Cloud User
    groups: [wheel, adm, systemd-journal]
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    shell: /bin/bash
    ssh-authorized-keys:
      - ssh-rsa 

write_files:
  - content: |
        #!/bin/sh
        hostnamectl set-hostname --static ${hostname}
        echo 'preserve_hostname: true' >> /etc/cloud/cloud.cfg
        cat /opt/lab_hosts >> /etc/hosts
        mv /opt/training_id /home/training/.ssh/id_rsa
        chown training.training /home/training/.ssh/id_rsa
        yum install ansible -y
        yum install git -y
        cp /opt/bootstrap_inventory /etc/ansible/hosts
        sed -i 's/^#\(host_key_checking = False\)/\1/' /etc/ansible/ansible.cfg
        touch /tmp/cloud-init.done
    path: /opt/bootstrap.sh
    permissions: 0755
  - content: |
        172.16.1.11 ctrl1
        172.16.2.21 node1
        172.16.2.22 node2
    path: /opt/lab_hosts
    permissions: 0755
  - content: |
        [default]
        output = json
        region = ${aws_region}
    path: /root/.aws/config
    permissions: 0600
  - content: |
        [default]
        aws_access_key_id = ${aws_access_key}
        aws_secret_access_key = ${aws_secret_key}
    path: /root/.aws/credentials
    permissions: 0600
  - content: |
        ${pkey}
    path: /opt/training_id
    permissions: 0600
  - content: |
        [servers]
        node1
        node2
        [controllers]
        ctrl1
    path: /opt/bootstrap_inventory
    permissions: 0755

runcmd:
  - /opt/bootstrap.sh
