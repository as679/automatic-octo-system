#cloud-config
users:
  - name: training
    lock_passwd: true
    gecos: Cloud User
    groups: [wheel, adm, systemd-journal]
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    shell: /bin/bash
    ssh-authorized-keys:
      - ssh-rsa 

write_files:
  - content: |
        #!/bin/sh
        hostnamectl set-hostname --static node2
        echo 'preserve_hostname: true' >> /etc/cloud/cloud.cfg
        cat /opt/lab_hosts >> /etc/hosts
    path: /opt/bootstrap.sh
    permissions: 0755
  - content: |
        172.16.1.11 ctrl1
        172.16.2.21 node1
        172.16.2.22 node2
    path: /opt/lab_hosts
    permissions: 0644

runcmd:
  - /opt/bootstrap.sh
